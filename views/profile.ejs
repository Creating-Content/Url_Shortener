<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= user.name || user.email %>'s Dashboard</title>
    <style>
        /* Color Palette: Primary Navy (#001f3f), Accent Green (#28a745), Background (#f8f9fa) */
        body { 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
            margin: 0; 
            padding: 0; 
            background-color: #f8f9fa; 
            color: #343a40;
        }
        
        /* --- Header & Navigation --- */
        header {
            background-color: #001f3f; /* Deep Navy Blue Header */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            padding: 15px 40px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: white;
        }

        .header-left a {
            text-decoration: none;
            color: white; 
            font-weight: 600;
            padding: 8px 15px;
            border: 1px solid white;
            border-radius: 4px;
            transition: all 0.3s ease;
        }
        .header-left a:hover {
            background-color: white;
            color: #001f3f;
        }
        
        .header-center h1 {
            margin: 0;
            font-size: 1.6rem;
            color: white;
            font-weight: 400;
        }

        /* --- Main Content Layout --- */
        .container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 0 20px;
        }

        /* --- Link List Card --- */
        .card {
            background: #ffffff;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
        }
        
        .card h2 {
            border-bottom: 2px solid #e9ecef;
            padding-bottom: 10px;
            margin-top: 0;
            color: #001f3f; /* Use Navy for section titles */
        }

        /* --- Table Styling --- */
        table { 
            width: 100%; 
            border-collapse: separate; 
            border-spacing: 0;
            margin-top: 20px; 
            font-size: 0.95rem;
        }
        th, td { 
            padding: 12px 15px; 
            text-align: left; 
            border-bottom: 1px solid #dee2e6;
        }
        th { 
            background-color: #f1f4f8; 
            color: #495057;
            font-weight: 600;
        }
        tr:nth-child(even) { background-color: #fafafa; }
        tr:hover {
            background-color: #e9eff6; 
        }
        
        /* --- Download Button --- */
        .download-btn { 
            padding: 10px 20px; 
            background-color: #28a745; /* Success Green */
            color: white; 
            border: none; 
            border-radius: 4px; 
            cursor: pointer; 
            font-weight: 600;
            transition: background-color 0.2s;
        }
        .download-btn:hover {
            background-color: #1e7e34;
        }
    </style>
</head>
<body>

    <header>
        <div class="header-left">
            <a href="/">üè† Home</a> 
        </div>
        <div class="header-center">
            <h1>Welcome, <%= user.name || user.email %>!</h1>
        </div>
        <div class="header-right" style="width: 150px; display:flex; justify-content:flex-end; gap:10px; align-items:center;">
            <a href="/logout" style="text-decoration:none; color:white; background:#d9534f; padding:8px 12px; border-radius:8px; font-weight:700;">Logout</a>
        </div> 
    </header>

    <div class="container">
        <div class="card">
            <h2>üîó Your Shortened Links</h2>
            
            <% if(locals.urls && urls.length > 0) { %>
                <div style="display: flex; justify-content: flex-end; margin-bottom: 20px;">
                    <button class="download-btn" onclick="downloadCSV()">Download List (CSV)</button>
                </div>

                <table>
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Short Link</th>
                            <th>Original URL</th>
                            <th>Clicks</th>
                            <th>Created On</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
            <% urls.forEach((url, index) => { %>
        <tr>
            <td><%= index + 1 %></td>
            <td style="display:flex;align-items:center; gap:8px;"><a href="<%= BASE_URL %>/url/<%= url.shortId %>" target="_blank" style="color:#001f3f; text-decoration: none;"><%= url.shortId %></a>
                <button class="copy-btn" data-shortid="<%= url.shortId %>" style="padding:6px 10px; border-radius:6px; border:none; background:#007b7b; color:#fff; cursor:pointer; font-weight:600;">Copy</button>
            </td>
            <td><%= url.redirectURL.substring(0, 70) + (url.redirectURL.length > 70 ? '...' : '') %></td>
            <td><%= url.visitHistory.length %></td>
            <td><%= new Date(url.createdAt).toLocaleDateString() %></td>
            
            <td>
                <form method="POST" action="/url/delete/<%= url.shortId %>" onsubmit="return confirm('Are you sure you want to delete this link? This cannot be undone.');">
                    <button type="submit" style="
                        background: none; 
                        border: none; 
                        color: #d9534f; /* Danger red color */
                        cursor: pointer; 
                        font-weight: 600;
                        padding: 0;
                    ">
                        Delete
                    </button>
                </form>
            </td>
            </tr>
    <% }) %>
</tbody>
                </table>
            <% } else { %>
                <p>You have not created any short links yet. Go to the Home page to start shortening!</p>
            <% } %>
        </div>
    </div>

    <script>
        // JavaScript for CSV download (Remains the same as before)
        function downloadCSV() {
            const urls = JSON.parse('<%- JSON.stringify(urls) %>');
            
            let csvContent = "S.No,Short URL,Original URL,Clicks,Created At\n";

            urls.forEach((url, index) => {
                const shortUrl = `${'<%= BASE_URL %>'}/url/${url.shortId}`;
                const originalUrl = `"${url.redirectURL.replace(/"/g, '""')}"`;
                const clicks = url.visitHistory.length;
                const createdAt = new Date(url.createdAt).toLocaleDateString();
                
                csvContent += `${index + 1},${shortUrl},${originalUrl},${clicks},${createdAt}\n`;
            });

            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement("a");
            const filename = `url_list_<%= user._id %>.csv`;
            
            if (navigator.msSaveBlob) { 
                navigator.msSaveBlob(blob, filename);
            } else {
                link.href = URL.createObjectURL(blob);
                link.setAttribute("download", filename);
                link.style.visibility = 'hidden';
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
            }
        }

        // Copy handlers
        document.querySelectorAll('.copy-btn').forEach(btn => {
            btn.addEventListener('click', (e) => {
                const sid = e.currentTarget.getAttribute('data-shortid');
                const full = `${'<%= BASE_URL %>'}/url/${sid}`;
                navigator.clipboard.writeText(full).then(()=>{
                    const old = btn.innerText;
                    btn.innerText = 'Copied!';
                    setTimeout(()=> btn.innerText = old, 1500);
                }).catch(()=> alert('Copy failed. Please copy manually.'));
            });
        });
    </script>

</body>
</html>